{
	"$content": [
		{
			"h1": "Avatar Component"
		},
		{
			"p": "Avatars display user images with consistent styling and sizing."
		},
		{
			"h2": "Basic Usage"
		},
		{
			"p": "Default avatar — requires src and alt."
		},
		{
			"Avatar": true,
			"$src": "/pic.webp",
			"$alt": "User Picture"
		},
		{
			"h2": "Avatar Sizes"
		},
		{
			"p": "Size is not yet implemented via prop, but can be extended in theme."
		},
		{
			"Avatar": true,
			"$src": "/pic.webp",
			"$alt": "Small",
			"$style": {
				"width": "2rem",
				"height": "2rem"
			}
		},
		{
			"Avatar": true,
			"$src": "/pic.webp",
			"$alt": "Large",
			"$style": {
				"width": "4rem",
				"height": "4rem"
			}
		},
		{
			"h2": "With Fallback Text"
		},
		{
			"p": "Future: support fallback initials when no image."
		},
		{
			"div": true,
			"$style": {
				"width": "2.5rem",
				"height": "2.5rem",
				"borderRadius": "9999px",
				"background": "#ddd",
				"display": "flex",
				"alignItems": "center",
				"justifyContent": "center"
			},
			"$children": "AB"
		},
		{
			"h2": "Grouped Avatars"
		},
		{
			"p": "Overlap multiple avatars for group displays."
		},
		{
			"$content": [
				{
					"Avatar": true,
					"$src": "/pic.webp",
					"$alt": "User 1",
					"$style": {
						"position": "relative",
						"zIndex": 3
					}
				},
				{
					"Avatar": true,
					"$src": "/pic.webp",
					"$alt": "User 2",
					"$style": {
						"position": "relative",
						"zIndex": 2,
						"marginLeft": "-1rem"
					}
				},
				{
					"Avatar": true,
					"$src": "/pic.webp",
					"$alt": "User 3",
					"$style": {
						"position": "relative",
						"zIndex": 1,
						"marginLeft": "-1rem"
					}
				}
			]
		},
		{
			"h2": "Back to Playground"
		},
		{
			"a": {
				"$href": "/playground/index.json",
				"$children": "← All Components"
			}
		}
	]
}
